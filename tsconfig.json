{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@models/*": ["src/models/*"],
      "@common/*": ["src/common/*"],
      "@users/*": ["src/users/*"],
      "@cache/*": ["src/cache/*"]
    }
  },
  "include": ["src", "migrations", "knexfile.ts"],
  "exclude": ["node_modules", "dist", "tmp"]
}
